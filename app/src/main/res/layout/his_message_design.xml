<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/his_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/his_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_his_message"
        android:layout_toEndOf="@id/his_image"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="18dp"
        android:textColor="#000"
        android:text="this is a demo message from me i'm the programmer ho made this fucking app !"
        android:padding="8dp"
        />
</RelativeLayout>